{
  "name": "appc.salesforce",
  "description": "Salesforce connector",
  "version": "2.0.1",
  "author": "Axway R&D",
  "license": "Apache-2.0",
  "framework": "none",
  "keywords": [
    "arrow",
    "arrow-connector",
    "appc-cli-plugin",
    "salesforce",
    "appcelerator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/appcelerator/appc.salesforce"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "private": true,
  "dependencies": {
    "async": "^1.5.0",
    "jsforce": "1.5.0",
    "lodash": "^3.10.1",
    "semver": "^5.0.3",
    "appc-connector-utils": "https://github.com/appcelerator/appc-connector-utils"
  },
  "devDependencies": {
    "arrow": "^*",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-istanbul": "^0.12.1",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-stage-2": "^6.22.0",
    "grunt": "^0.4.5",
    "grunt-appc-js": "^1.0.19",
    "grunt-contrib-clean": "^0.7.0",
    "grunt-mocha-test": "^0.13.2",
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "mockery": "^2.0.0",
    "nsp": "^2.6.3",
    "nyc": "^10.2.0",
    "request": "^2.60.0",
    "retire": "^1.3.1",
    "rimraf": "^2.6.1",
    "should": "^7.0.2",
    "sinon": "^2.1.0",
    "tap": "^10.3.0"
  },
  "scripts": {
    "start": "appc run",
    "build": "npm run clean && npm run build:dev && npm run security",
    "build:dev": "npm run build:dist",
    "build:dist": "babel -d ./dist ./lib",
    "lint": "standard --fix",
    "security": "retire --exitwith 0 --outputpath scan-retire.json && nsp check --output json > scan-nsp.json",
    "clean": "rimraf ./tmp && rimraf dist/* coverage/*",
    "test": "npm run security && npm run test:unit && npm run clean",
    "test:coverage": "nyc check-coverage --lines 90 --functions 85 --branches 85 --statements 90",
    "test:unit": "tap ./test/unit/* --color --bail --coverage --coverage-report=html && npm run test:coverage",
    "test:integration": "grunt"
  },
  "standard": {
    "ignore": [
      "test/integration/**"
    ]
  }
}
